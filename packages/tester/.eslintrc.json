{
    "extends": "airbnb-base",
    "parser": "babel-eslint",
    "plugins": [
        "react",
        "jsx-a11y",
        "import",
        "flowtype"
    ],
    "env": {
      "atomtest": true,
      "es6": true,
      "node": true,
      "jasmine": true
    },
    "globals": {
      "atom": true,
      "document": true,
      "window": true
    },
    "rules": {
      "import/extensions": 0,
      "import/no-unresolved": 0,
      "import/no-extraneous-dependencies": 0,
      "no-restricted-syntax": 0,
      "strict": 0,
      "class-methods-use-this": 0,
      "no-param-reassign": 0,
      "no-useless-escape": 0,
      "prefer-rest-params": 0,
      "react/jsx-filename-extension": 0,
      "react/sort-comp": 0,
      "no-return-assign": 0,
      "no-unused-vars": ["error", { "varsIgnorePattern": "^atom$" }],
      "no-underscore-dangle": 0,
      "no-plusplus": 0,
      "consistent-return": 0,
      "global-require": 0,
      "max-len": [2, 150],
      "no-nested-ternary": 0,
      "no-template-curly-in-string": 0,
      "no-console": [1, { "allow": ["warn", "error"] }]
    }
}
